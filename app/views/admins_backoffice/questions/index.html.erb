<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Listando Perguntas</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<div class="contaner-table-admin">
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th style="width:100px">#</th>
        <th>Email</th>
        <th>

        </th>
      </tr>
    </thead>
    <tbody>
      <% @questions.each do |question| %>
        <tr>
          <td>
            <%= question.id %>
          </td>
          <td>
            <%= question.description %>
          </td>
          <td style="width: 100px">

            <%= link_to '', class:"btn btn-primary btn-circle" do %>
              <i class="fa fa-edit"></i>
              <% end %>

              <%= link_to admins_backoffice_subject_path(1), method: :delete, class:"btn btn-danger btn-circle" do %>
              <i class="fa fa-minus"></i>
              <% end %>
          </td>
        </tr>
        <% end %>
    </tbody>
  </table>
 </div>
</div>
<div class="text-center">
  <%= paginate @questions %>
</div>
